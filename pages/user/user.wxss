.nav{
    display: flex;
    width: 100%;
    height: 40px;
    background-color: black;
    color: white;
    justify-content: space-between;
}
.nav view{
    text-align: center;
    width: 251rpx;
    line-height: 40px;
    color: #aaa;
    position: relative;
}
.nav .first{
    color: white;
}
.bottom{
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 2px;
}
.nav .firstview{
    background-color: red;
}
scroll-view {
  width: 100%;
  height: 100vh;
  color: #878787;
}
.seller__names {
  border-bottom: 4rpx solid rgba(211, 211, 211, 0.5);
  padding: 15rpx 26rpx;
  display: flex;
  justify-content: space-between;
}
.seller__names .seller__names__image {
  width: 60rpx;
  height: 60rpx;
  border-right: 50% 50%;
  float: left;
}
.seller__names .seller__name {
  padding-left: 39rpx;
  line-height: 60rpx;
  float: left;
}
.seller__names .seller__names__btn {
  width: 120rpx;
  border: none;
  border: 1rpx solid #68be8c;
  border-radius: 10rpx;
  font-size: 24rpx;
  height: 48rpx;
  line-height: 48rpx;
  float: right;
  margin: 6rpx 0;
}
.frontcover {
  position: relative;
  color: white;
}
.frontcover .image {
  width: 100%;
  height: 430rpx;
}
.frontcover .tag {
  position: absolute;
  top: 27rpx;
  left: 25rpx;
}
.frontcover .tag text {
  font-size: 24rpx;
  background-color: #68be8c;
  padding: 8rpx 12rpx;
  margin-left: 12rpx;
  border-radius: 5rpx;
}
.frontcover .title {
  position: absolute;
  top: 360rpx;
  left: 37rpx;
  z-index: 100;
}
.frontcover .title text {
  font-size: 28rpx;
  font-weight: bold;
}
.frontcover::before {
  content: "";
  position: absolute;
  top: 0;
  width: 100%;
  height: inherit;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0) 20%, rgba(0, 0, 0, 0.8) 100%);
  height: 100%;
}
.frontcover .attr {
  position: absolute;
  top: 390rpx;
}
.frontcover .attr view {
  float: left;
  margin-left: 37rpx;
}
.frontcover .attr view icon {
  background-color: #eee;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50% 50%;
  margin-right: 10rpx;
}
.frontcover .attr view text {
  font-size: 18rpx;
}
.content_bd {
  padding: 26rpx 31rpx;
}
.content_bd text {
  font-size: 28rpx;
}
.iamges {
  padding: 18rpx;
}
.iamges image {
  width: 222rpx;
  height: 230rpx;
  display: block;
  float: left;
  box-sizing: border-box;
  margin: 8rpx;
}
.iamges::after {
  content: "";
  display: block;
  clear: both;
}
.buy {
  padding: 0 26rpx ;
  background-color: #191919;
  height: 129rpx;
  display: flex;
  justify-content: space-between;
}
.buy .info {
  margin-left: 26rpx;
  color: white;
  font-size: 24rpx;
}
.buy .info .price {
  padding: 16rpx 0 8rpx 0;
  font-size: 42rpx;
  display: block;
}
.buy .buy__btn {
  padding: 6rpx 68rpx;
  font-size: 24rpx;
  color: white;
  border: 1rpx solid white;
  border-radius: 5px;
  margin: 28rpx 0 ;
}
.praise {
  border-bottom: 16rpx solid rgba(211, 211, 211, 0.5);
}
.praise .like_num {
  margin: 0 25rpx;
  height: 88rpx;
  position: relative;
}
.praise .like_num view {
  font-size: 28rpx;
  color: #878787;
  text-align: center;
  height: 100%;
  line-height: 88rpx;
  padding: 0 30rpx;
  background-color: white;
  position: relative;
  z-index: 1;
  width: 330rpx;
  margin: 0 auto;
}
.praise .like_num::after {
  content: "";
  display: block;
  position: absolute;
  top: 50%;
  width: 100%;
  border: 1rpx solid rgba(211, 211, 211, 0.5);
}
.praise .head__portrait {
  padding: 0 20rpx;
  margin-bottom: 10rpx;
}
.praise .head__portrait image {
  width: 81rpx;
  height: 82rpx;
  display: block;
  float: left;
  box-sizing: border-box;
  margin: 4rpx;
}
.praise .head__portrait::after {
  content: "";
  display: block;
  clear: both;
}
.comment {
  padding: 0 25rpx;
}
.comment .comment__num {
  font-size: 36rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.comment .comment_bd .father {
  border-top: 1rpx solid rgba(211, 211, 211, 0.5);
  position: relative;
  padding: 20rpx 0 28rpx ;
  display: flex;
}
.comment .comment_bd .father navigator {
  display: inline-block;
}
.comment .comment_bd .father .comment__user__image {
  width: 53rpx;
  height: 53rpx;
  border-radius: 50% 50%;
}
.comment .comment_bd .father .comment__text {
  line-height: 52rpx;
  width: 100%;
  padding-left: 13rpx;
}
.comment .comment_bd .father .comment__text .username {
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.comment .comment_bd .father .comment__text .username text {
  font-size: 24rpx;
}
.comment .comment_bd .father .comment__text .content__text {
  font-size: 28rpx;
  padding-bottom: 20rpx;
}
.comment .comment_bd .father .comment__text .content__text .text__1 {
  color: red;
}
.comment .comment_bd .father .comment__text .content__text .reply {
  margin-top: 20rpx;
  padding: 12rpx 18rpx;
  background-color: #f8f8f8;
  font-size: 24rpx;
}
.comment .comment_bd .father .comment__text .content__text .reply .reply_user {
  font-weight: bold;
  color: black;
  padding: 0 12rpx;
}
.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #1b181f;
  color: #aaa;
  display: flex;
  justify-content: space-between;
  z-index: 999;
  height: 100rpx;
}
.footer .footer__nav {
  width: 470rpx;
  display: flex;
  justify-content: space-around;
  height: 100rpx;
  padding: 12rpx 0;
  text-align: center;
}
.footer .footer__nav image {
  width: 56rpx;
  height: 56rpx;
  display: block;
  margin: 0 auto;
}
.footer .footer__nav text {
  font-size: 24rpx;
  display: block;
}
.footer .comment__btn {
  width: 280rpx;
  height: 100rpx;
  background-color: #63b083;
  color: white;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
}
